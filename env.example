# Environment variables for local development
# Copy this file to .env.local and update the values

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/carbon_credit_iot?schema=public"

# Redis Configuration (optional, for caching)
REDIS_URL="redis://localhost:6379"

# Next.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Blockchain Configuration
NEXT_PUBLIC_PROJECT_ID="your-reown-project-id"
CARBON_CREDIT_TOKEN_ADDRESS="0x..."
IOT_DATA_VERIFIER_ADDRESS="0x..."
BLOCKCHAIN_PRIVATE_KEY="0x..."

# RPC URLs for different networks
RPC_URL_1="https://rpc.ankr.com/eth"  # Ethereum Mainnet
RPC_URL_42161="https://rpc.ankr.com/arbitrum"  # Arbitrum
RPC_URL_137="https://rpc.ankr.com/polygon"  # Polygon
RPC_URL_8453="https://rpc.ankr.com/base"  # Base
RPC_URL_534352="https://rpc.ankr.com/scroll"  # Scroll

# IoT Device Configuration
IOT_API_BASE_URL="http://localhost:3000/api/iot"
IOT_DATA_RETENTION_DAYS=30

# Monitoring and Logging
LOG_LEVEL="info"
ENABLE_METRICS=true

# Security
JWT_SECRET="your-jwt-secret-key"
ENCRYPTION_KEY="your-encryption-key"

# External Services (optional)
SENDGRID_API_KEY=""
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
